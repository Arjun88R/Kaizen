{
  "manifest_version": 3,
  "name": "AI Job Tracker",
  "version": "0.1",
  "description": "A simple extension to track job applications.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.a.run.app/",
    "http://localhost:3000/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}